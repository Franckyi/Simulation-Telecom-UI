<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="800.0"
      spacing="5.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.rtgrenoble.velascof.simtelui.controller.param.AffichageDonneesController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0">
            <children>
                <Label text="Affichage données">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Label text="Affichage de la séquence à générer">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
        <CheckBox fx:id="afficherSequenceBox" mnemonicParsing="false"
                  text="Afficher la séquence binaire sous forme de texte">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </CheckBox>
        <CheckBox fx:id="afficherRepartitionBox" mnemonicParsing="false"
                  text="Afficher la répartition des symboles dans la séquence"/>
        <HBox fx:id="afficherRepartitionPane" alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label prefWidth="150.0" text="Bits par symbole :"/>
                <TextField fx:id="bpsField" prefWidth="50.0"/>
            </children>
            <padding>
                <Insets left="50.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
